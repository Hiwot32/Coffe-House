// Prisma Client Generator
generator client {
  provider = "prisma-client-js"
}

// Database Connection
datasource db {
  provider = "mysql"
   url      = env("DATABASE_URL")
}

// Product Table
model Coffee_Products {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  price       Float
  image       String
  createdAt   DateTime @default(now())

}
model Tea_Products {
  id          Int  @id @default(autoincrement())
  title       String
  description String?
  price       Float
  image       String
  createdAt   DateTime @default(now())

}
model Pastriy_Products {
  id          Int  @id @default(autoincrement())
  title       String
  description String?
  price       Float
  image       String
  createdAt   DateTime @default(now())
}
model User{
  id          Int @id @default(autoincrement())
  name        String
  email       String  @unique
  password    String
  createdAt   DateTime @default(now())
}
